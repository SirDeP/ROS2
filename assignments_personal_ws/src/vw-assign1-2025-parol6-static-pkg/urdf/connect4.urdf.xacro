<?xml version="1.0"?>
<robot name="connect4" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <link name="base_conn_4">
    <visual>
      <geometry>
        <mesh filename="package://vw-assign1-2025-parol6-fixed-pkg/meshes/base_conn_4.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="">
        <color rgba="1 1 1 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://vw-assign1-2025-parol6-fixed-pkg/meshes/base_conn_4.STL" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <link name="board_conn_4">
    <visual>
      <geometry>
        <mesh filename="package://vw-assign1-2025-parol6-fixed-pkg/meshes/board_conn_4.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://vw-assign1-2025-parol6-fixed-pkg/meshes/board_conn_4.STL" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <link name="coin_holder">
    <visual>
      <geometry>
        <mesh filename="package://vw-assign1-2025-parol6-fixed-pkg/meshes/muntjes_houder.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="">
        <color rgba="1 1 1 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://vw-assign1-2025-parol6-fixed-pkg/meshes/muntjes_houder.STL" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <link name="coin">
    <visual>
      <geometry>
        <mesh filename="package://vw-assign1-2025-parol6-fixed-pkg/meshes/muntje.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0.0170 0.0170 0.006" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.0165" length="0.010" />
      </geometry>
    </collision>
  </link>

  <!-- Fix all parts to base_conn_4; adjust relative poses -->
  <joint name="board_to_base" type="fixed">
    <parent link="base_conn_4"/>
    <child link="board_conn_4"/>
    <origin xyz="0.281 0.031 0.006" rpy="0 0 -0.226"/>
  </joint>

  <joint name="holder_to_base" type="fixed">
    <parent link="base_conn_4"/>
    <child link="coin_holder"/>
    <origin xyz="0.00 0.08 0.00" rpy="1.574 0 0"/>
  </joint>

  <joint name="coin_to_base" type="fixed">
    <parent link="base_conn_4"/>
    <child link="coin"/>
    <origin xyz="0.04 0.08 0.00" rpy="0 0 0"/>
  </joint>

</robot>
